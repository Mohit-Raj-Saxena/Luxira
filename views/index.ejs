<%- include('./partials/header') %>

<% if(error.length>0){ %>
    <div class="fixed top-6 left-1/2 transform -translate-x-1/2 z-50 p-4 rounded-lg bg-red-500 shadow-2xl border-l-4 border-red-700">
        <div class="flex items-center">
            <i class="ri-error-warning-line text-white text-xl mr-3"></i>
            <span class="text-white font-medium">
                <%= error %>
            </span>
        </div>
    </div>
<% } %>

<div class="w-full min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 flex">
    <!-- Left Side - Register -->
    <div class="w-full lg:w-1/2 flex items-center justify-center min-h-screen py-12 px-6 lg:px-12">
        <div class="w-full max-w-md">
            <!-- Register Header -->
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full mb-4 shadow-lg">
                    <i class="ri-user-add-line text-white text-2xl"></i>
                </div>
                <h3 class="text-3xl font-bold text-gray-900 mb-2">
                    Welcome to <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-indigo-600">Luxira</span>
                </h3>
                <p class="text-gray-600 text-lg">Create your account to get started</p>
            </div>

            <!-- Register Form -->
            <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
                <form autocomplete="off" action="/users/register" method="post" class="space-y-6">
                    <div class="relative">
                        <i class="ri-user-line absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 text-xl"></i>
                        <input
                            class="w-full pl-12 pr-4 py-4 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300 text-gray-900 placeholder-gray-500"
                            type="text" placeholder="Full Name" name="fullname" required>
                    </div>
                    
                    <div class="relative">
                        <i class="ri-mail-line absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 text-xl"></i>
                        <input
                            class="w-full pl-12 pr-4 py-4 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300 text-gray-900 placeholder-gray-500"
                            type="email" placeholder="Email Address" name="email" required>
                    </div>
                    
                    <div class="relative">
                        <i class="ri-lock-line absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 text-xl"></i>
                        <input
                            class="w-full pl-12 pr-4 py-4 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300 text-gray-900 placeholder-gray-500"
                            type="password" placeholder="Password" name="password" required>
                    </div>
                    
                    <div class="relative">
                        <i class="ri-phone-line absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 text-xl"></i>
                        <input
                            class="w-full pl-12 pr-4 py-4 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300 text-gray-900 placeholder-gray-500"
                            type="number" placeholder="Contact Number" name="contact" required>
                    </div>
                    
                    <button 
                        type="submit"
                        class="w-full bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white font-semibold py-4 px-6 rounded-xl transition-all duration-300 transform hover:scale-[1.02] shadow-lg hover:shadow-xl">
                        <i class="ri-user-add-line mr-2"></i>
                        Create My Account
                    </button>
                </form>
                
                <div class="mt-6 text-center">
                    <p class="text-gray-600">Already have an account? 
                        <button onclick="scrollToLogin()" class="text-blue-600 hover:text-blue-700 font-medium transition-colors">
                            Sign in here
                        </button>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Side - Login -->
    <div class="w-full lg:w-1/2 flex items-center justify-center min-h-screen py-12 px-6 lg:px-12 bg-gradient-to-br from-indigo-600 via-purple-600 to-blue-700 relative overflow-hidden">
        <!-- Background decoration -->
        <div class="absolute inset-0">
            <div class="absolute top-20 left-20 w-32 h-32 bg-white/10 rounded-full blur-xl"></div>
            <div class="absolute bottom-32 right-16 w-48 h-48 bg-white/5 rounded-full blur-2xl"></div>
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-gradient-to-r from-white/5 to-transparent rounded-full blur-3xl"></div>
        </div>
        
        <div class="w-full max-w-md relative z-10">
            <!-- Login Header -->
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full mb-4 shadow-lg border border-white/30">
                    <i class="ri-login-box-line text-white text-2xl"></i>
                </div>
                <h4 class="text-3xl font-bold text-white mb-2">Welcome Back</h4>
                <p class="text-blue-100 text-lg">Sign in to your account</p>
            </div>

            <!-- Login Form -->
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl shadow-2xl p-8 border border-white/20">
                <form autocomplete="off" action="/users/login" method="post" class="space-y-6">
                    <div class="relative">
                        <i class="ri-mail-line absolute left-3 top-1/2 transform -translate-y-1/2 text-white/70 text-xl"></i>
                        <input
                            class="w-full pl-12 pr-4 py-4 bg-white/20 backdrop-blur-sm border border-white/30 rounded-xl focus:ring-2 focus:ring-white/50 focus:border-white/50 transition-all duration-300 text-white placeholder-white/70"
                            type="email" placeholder="Email Address" name="email" required>
                    </div>
                    
                    <div class="relative">
                        <i class="ri-lock-line absolute left-3 top-1/2 transform -translate-y-1/2 text-white/70 text-xl"></i>
                        <input
                            class="w-full pl-12 pr-4 py-4 bg-white/20 backdrop-blur-sm border border-white/30 rounded-xl focus:ring-2 focus:ring-white/50 focus:border-white/50 transition-all duration-300 text-white placeholder-white/70"
                            type="password" placeholder="Password" name="password" required>
                    </div>
                    
                    <button 
                        type="submit"
                        class="w-full bg-white hover:bg-gray-100 text-indigo-600 font-semibold py-4 px-6 rounded-xl transition-all duration-300 transform hover:scale-[1.02] shadow-lg hover:shadow-xl">
                        <i class="ri-login-box-line mr-2"></i>
                        Sign In
                    </button>
                </form>
                
                <div class="mt-6 text-center">
                    <button class="text-white/80 hover:text-white text-sm font-medium transition-colors">
                        Forgot your password?
                    </button>
                </div>
                
                <div class="mt-6 text-center">
                    <p class="text-white/80">Don't have an account? 
                        <button onclick="scrollToRegister()" class="text-white hover:text-blue-200 font-medium transition-colors">
                            Sign up here
                        </button>
                    </p>
                </div>
            </div>

            <!-- Features List -->
            <div class="mt-8 space-y-3">
                <div class="flex items-center text-white/90">
                    <i class="ri-shield-check-line mr-3 text-green-400"></i>
                    <span>Secure & encrypted</span>
                </div>
                <div class="flex items-center text-white/90">
                    <i class="ri-customer-service-line mr-3 text-blue-400"></i>
                    <span>24/7 customer support</span>
                </div>
                <div class="flex items-center text-white/90">
                    <i class="ri-truck-line mr-3 text-yellow-400"></i>
                    <span>Fast & free delivery</span>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function scrollToLogin() {
    document.querySelector('.lg\\:w-1\\/2:nth-child(2)').scrollIntoView({ 
        behavior: 'smooth' 
    });
}

function scrollToRegister() {
    document.querySelector('.lg\\:w-1\\/2:first-child').scrollIntoView({ 
        behavior: 'smooth' 
    });
}

// Auto-hide error message after 5 seconds
document.addEventListener('DOMContentLoaded', function() {
    const errorMessage = document.querySelector('[class*="bg-red-500"]');
    if (errorMessage) {
        setTimeout(() => {
            errorMessage.style.opacity = '0';
            errorMessage.style.transform = 'translate(-50%, -100%) scale(0.95)';
            setTimeout(() => {
                errorMessage.remove();
            }, 300);
        }, 5000);
    }
});
</script>

<%- include('./partials/footer') %>
