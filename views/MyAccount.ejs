<%- include('./partials/header') %>

<div class="w-full min-h-screen bg-gray-50 flex justify-center items-start px-4 sm:px-6 lg:px-20 py-10">
    <div class="w-full max-w-6xl">
        
        <!-- Account Header -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8">
            <div class="relative bg-gradient-to-r from-indigo-600 via-purple-600 to-blue-600 px-8 py-8">
                <div class="flex flex-col sm:flex-row items-center justify-between">
                    <div class="flex items-center space-x-6">
                        <div class="relative">
                            <div class="w-20 h-20 rounded-full bg-white/20 backdrop-blur-sm border-4 border-white/30 flex items-center justify-center text-3xl font-bold text-white shadow-lg">
                                <%= user.fullname ? user.fullname[0].toUpperCase() : "U" %>
                            </div>
                            <div class="absolute -bottom-1 -right-1 w-6 h-6 bg-green-500 border-2 border-white rounded-full"></div>
                        </div>
                        <div class="text-center sm:text-left">
                            <h1 class="text-3xl font-bold text-white mb-2">Welcome back!</h1>
                            <p class="text-blue-100 text-lg"><%= user.fullname || "User" %></p>
                            <p class="text-blue-200 text-sm">Member since <%= new Date(user.createdAt || Date.now()).toLocaleDateString('en-US', { year: 'numeric', month: 'long' }) %></p>
                        </div>
                    </div>
                    <div class="mt-4 sm:mt-0">
                        <button class="bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white px-6 py-3 rounded-full font-medium transition-all duration-300 border border-white/30">
                            <i class="ri-edit-line mr-2"></i>Edit Profile
                        </button>
                    </div>
                </div>
                
                <!-- Decorative elements -->
                <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full -translate-y-16 translate-x-16"></div>
                <div class="absolute bottom-0 left-0 w-24 h-24 bg-white/10 rounded-full translate-y-12 -translate-x-12"></div>
            </div>
        </div>

        <!-- Main Content Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            
            <!-- Left Column - Personal Info -->
            <div class="lg:col-span-2 space-y-8">
                
                <!-- Personal Information Card -->
                <div class="bg-white rounded-xl shadow-lg p-8">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-bold text-gray-900 flex items-center">
                            <i class="ri-user-line text-indigo-600 mr-3 text-xl"></i>
                            Personal Information
                        </h2>
                        <button class="text-indigo-600 hover:text-indigo-700 font-medium transition-colors">
                            <i class="ri-edit-2-line mr-1"></i>Edit
                        </button>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-4">
                            <div class="p-4 bg-gray-50 rounded-lg">
                                <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">Full Name</label>
                                <p class="text-lg font-semibold text-gray-900 mt-1"><%= user.fullname || "Not provided" %></p>
                            </div>
                            <div class="p-4 bg-gray-50 rounded-lg">
                                <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">Email Address</label>
                                <p class="text-lg text-gray-900 mt-1 break-all"><%= user.email %></p>
                            </div>
                        </div>
                        <div class="space-y-4">
                            <div class="p-4 bg-gray-50 rounded-lg">
                                <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">Phone Number</label>
                                <p class="text-lg text-gray-900 mt-1"><%= user.contact || "Not provided" %></p>
                                <% if (!user.contact) { %>
                                    <button class="text-indigo-600 hover:text-indigo-700 text-sm font-medium mt-2">Add phone number</button>
                                <% } %>
                            </div>
                            <div class="p-4 bg-gray-50 rounded-lg">
                                <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">Account Status</label>
                                <div class="flex items-center mt-1">
                                    <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
                                    <p class="text-lg text-green-600 font-medium">Active</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order History Card -->
                <div class="bg-white rounded-xl shadow-lg p-8">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-bold text-gray-900 flex items-center">
                            <i class="ri-shopping-bag-line text-indigo-600 mr-3 text-xl"></i>
                            Recent Orders
                        </h2>
                        <button class="text-indigo-600 hover:text-indigo-700 font-medium transition-colors">
                            View All
                        </button>
                    </div>
                    
                    <!-- Sample order - replace with actual order data when available -->
                    <div class="space-y-4">
                        <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                            <div class="flex justify-between items-start mb-2">
                                <div>
                                    <p class="font-semibold text-gray-900">#ORD-2024-001</p>
                                    <p class="text-sm text-gray-500">Placed on March 15, 2024</p>
                                </div>
                                <span class="px-3 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">
                                    Delivered
                                </span>
                            </div>
                            <div class="flex justify-between items-end">
                                <p class="text-gray-600">3 items</p>
                                <p class="font-bold text-lg text-gray-900">₹ 2,450</p>
                            </div>
                        </div>
                        
                        <div class="text-center py-8">
                            <i class="ri-shopping-cart-line text-4xl text-gray-300 mb-4"></i>
                            <p class="text-gray-500">No recent orders found</p>
                            <button class="mt-4 bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                                Start Shopping
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Quick Actions & Stats -->
            <div class="space-y-8">
                
                <!-- Quick Stats -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
                        <i class="ri-dashboard-line text-indigo-600 mr-2"></i>
                        Quick Stats
                    </h3>
                    
                    <div class="space-y-4">
                        <div class="flex items-center justify-between p-4 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg">
                            <div>
                                <p class="text-sm text-gray-600">Total Orders</p>
                                <p class="text-2xl font-bold text-indigo-600">0</p>
                            </div>
                            <i class="ri-shopping-bag-line text-3xl text-indigo-400"></i>
                        </div>
                        
                        <div class="flex items-center justify-between p-4 bg-gradient-to-r from-green-50 to-emerald-50 rounded-lg">
                            <div>
                                <p class="text-sm text-gray-600">Total Spent</p>
                                <p class="text-2xl font-bold text-green-600">₹ 0</p>
                            </div>
                            <i class="ri-money-dollar-circle-line text-3xl text-green-400"></i>
                        </div>
                        
                        <div class="flex items-center justify-between p-4 bg-gradient-to-r from-purple-50 to-pink-50 rounded-lg">
                            <div>
                                <p class="text-sm text-gray-600">Saved Amount</p>
                                <p class="text-2xl font-bold text-purple-600">₹ 0</p>
                            </div>
                            <i class="ri-heart-line text-3xl text-purple-400"></i>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
                        <i class="ri-settings-line text-indigo-600 mr-2"></i>
                        Quick Actions
                    </h3>
                    
                    <div class="space-y-3">
                        <button class="w-full text-left p-4 rounded-lg hover:bg-gray-50 transition-colors border border-gray-200 group">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mr-3 group-hover:bg-indigo-200 transition-colors">
                                    <i class="ri-user-settings-line text-indigo-600"></i>
                                </div>
                                <div>
                                    <p class="font-medium text-gray-900">Update Profile</p>
                                    <p class="text-sm text-gray-500">Edit personal information</p>
                                </div>
                            </div>
                        </button>
                        
                        <button class="w-full text-left p-4 rounded-lg hover:bg-gray-50 transition-colors border border-gray-200 group">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-3 group-hover:bg-green-200 transition-colors">
                                    <i class="ri-lock-password-line text-green-600"></i>
                                </div>
                                <div>
                                    <p class="font-medium text-gray-900">Change Password</p>
                                    <p class="text-sm text-gray-500">Update your password</p>
                                </div>
                            </div>
                        </button>
                        
                        <button class="w-full text-left p-4 rounded-lg hover:bg-gray-50 transition-colors border border-gray-200 group">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center mr-3 group-hover:bg-yellow-200 transition-colors">
                                    <i class="ri-map-pin-line text-yellow-600"></i>
                                </div>
                                <div>
                                    <p class="font-medium text-gray-900">Manage Addresses</p>
                                    <p class="text-sm text-gray-500">Add or edit addresses</p>
                                </div>
                            </div>
                        </button>
                        
                        
                    </div>
                </div>

                <!-- Support -->
                <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl shadow-lg p-6 text-white">
                    <h3 class="text-xl font-bold mb-4">Need Help?</h3>
                    <p class="text-indigo-100 mb-4">Our customer support team is here to assist you with any questions or concerns.</p>
                    <button class="bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white px-4 py-2 rounded-lg font-medium transition-all duration-300 border border-white/30">
                        <i class="ri-customer-service-2-line mr-2"></i>Contact Support
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>